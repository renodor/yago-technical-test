<div>
  <h1 class="text-lg font-bold text-center">Let's start to get to know you better</h1>

  <div class="mt-5">
    <%= simple_form_for @lead do |f| %>
      <%= f.input :first_name, label: false, placeholder: 'First name', input_html: { class: 'm-1' } %>
      <%= f.input :last_name, label: false, placeholder: 'Last name', input_html: { class: 'm-1' } %>
      <%= f.input :email, label: false, placeholder: 'Email*', input_html: { class: 'm-1' } %>
      <%= f.input :phone_number, label: false, placeholder: 'Phone number*', input_html: { class: 'm-1' } %>
      <%= f.input :address, label: false, placeholder: 'Address', input_html: { class: 'm-1' } %>
      <%= f.input :address_2, label: false, placeholder: 'Address 2', input_html: { class: 'm-1' } %>
      <%= f.input :zip_code, label: false, placeholder: 'Zip code', input_html: { class: 'm-1' } %>
      <%= f.input :city, label: false, placeholder: 'City', input_html: { class: 'm-1' } %>
      <p class="mt-1">Profession:</p>
      <%=
        f.input :nacebel_codes,
        as: :check_boxes,
        collection: Lead::PROFESSION_BY_NACEBEL_CODE.invert,
        include_hidden: false,
        label: false,
        input_html: { class: 'mr-2'},
        :item_wrapper_class => 'block'
      %>
      <%= f.button :submit, 'Continue', class: 'w-full mt-3 border border-black p-2 bg-slate-200 cursor-pointer' %>
    <% end %>
  </div>
</div>